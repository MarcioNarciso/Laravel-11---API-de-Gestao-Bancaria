{
    "openapi": "3.0.0",
    "info": {
        "title": "API de Gestão Bancária",
        "version": "1.0.0"
    },
    "paths": {
        "/accounts": {
            "get": {
                "tags": [
                    "Contas"
                ],
                "summary": "Endpoint para consultar contas.",
                "description": "Retorna uma lista paginada de todas as contas cadastradas,",
                "operationId": "a5af6b64c5ff2ea0a75cec62e63a632e",
                "responses": {
                    "200": {
                        "description": "Lista todas contas ativas.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AccountResource"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Contas"
                ],
                "summary": "Armazena a nova conta no banco de dados.",
                "description": "Cadastra uma nova conta para transações futuras.",
                "operationId": "502f0663eeceed364480dc3665222a60",
                "requestBody": {
                    "description": "'value' é o saldo inicial da conta. Deve ser um valor \n            maior que zero.",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "value": {
                                        "title": "Saldo inicial da conta.",
                                        "type": "number"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Conta criada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AccountResource"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Informações inválidas da conta."
                    }
                }
            }
        },
        "/accounts/{id}": {
            "get": {
                "tags": [
                    "Contas"
                ],
                "summary": "Busca determinada conta pelo ID e retorna para o cliente.",
                "description": "Retorna informações da conta específicada pelo parâmetro \n        \"id\" no path.",
                "operationId": "e6952cf57a3b1d885eb38d1f7929f5cc",
                "parameters": [
                    {
                        "parameter": "id",
                        "name": "id",
                        "in": "path",
                        "description": "ID da conta",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Informações de determinada conta.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AccountResource"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Foi requisitada uma determinada conta, mas ela não existe ou está inativa."
                    }
                }
            },
            "delete": {
                "tags": [
                    "Contas"
                ],
                "summary": "Desativa determinada conta pelo ID.",
                "operationId": "05ff22e38b805a39dffeb038a88d2508",
                "parameters": [
                    {
                        "parameter": "id",
                        "name": "id",
                        "in": "path",
                        "description": "ID da conta",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Conta desativada com sucesso."
                    },
                    "404": {
                        "description": "Foi requisitada uma determinada conta, mas ela não existe ou ja estava inativa."
                    }
                }
            }
        },
        "/transactions": {
            "post": {
                "tags": [
                    "Transações"
                ],
                "summary": "Realiza um transação entre duas contas bancárias.",
                "description": "Realizar a movimentação de saldos: subtrai do pagador \n        (junto com a taxa) e adiciona ao receber (sem taxa).",
                "operationId": "c78fc912fadbdd82cf985cb3bb8067f2",
                "requestBody": {
                    "description": "Informações necessárias para realizar a movimentação de \n            saldo entre as contas.",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/BankTransactionResource"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Transação realizada com sucesso. Retorna os dados \n                atualizados da conta do pagador.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AccountResource"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Informações inválidas da transação."
                    },
                    "404": {
                        "description": "A conta do recebedor e/ou do pagador não foi encontrada\n                ou o saldo do pagador é insuficiente para realizar a transação."
                    }
                }
            }
        },
        "/transactions/{accountId}": {
            "get": {
                "tags": [
                    "Transações"
                ],
                "summary": "Lista todas as transações de determinada conta.",
                "description": "Retorna uma lista com todas as transações de determinada conta.",
                "operationId": "c82fa7c4e7d23d30012f894e69556bd9",
                "parameters": [
                    {
                        "parameter": "accountId",
                        "name": "accountId",
                        "in": "path",
                        "description": "ID da conta",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Uma listagem de todas transações de uma conta.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/BankTransactionResource"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "A conta requisitada não existe ou foi desativada."
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "AccountResource": {
                "title": "Account",
                "required": [
                    "balance"
                ],
                "properties": {
                    "accountId": {
                        "title": "ID da conta",
                        "type": "string"
                    },
                    "balance": {
                        "title": "Saldo da conta",
                        "type": "number"
                    },
                    "createdAt": {
                        "title": "Data de criação da conta",
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "BankTransactionResource": {
                "title": "Bank Transaction",
                "required": [
                    "receiverId",
                    "payerId",
                    "paymentMethod",
                    "value"
                ],
                "properties": {
                    "receiverId": {
                        "title": "ID da conta do recebedor",
                        "type": "string"
                    },
                    "payerId": {
                        "title": "ID da conta do pagador",
                        "type": "string"
                    },
                    "paymentMethod": {
                        "title": "Meio que o pagamento será realizado.",
                        "description": "Formas de pagamento aceitas: 'C' (Crédito), 'D' (Débito) e 'P' (Pix)",
                        "type": "string"
                    },
                    "value": {
                        "title": "Valor da transação",
                        "type": "number"
                    }
                },
                "type": "object"
            }
        }
    }
}